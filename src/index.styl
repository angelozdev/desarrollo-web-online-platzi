//---------------------BASE--------------------------
@require '../node_modules/normalize.css/normalize.css';
@import url('https://fonts.googleapis.com/css?family=Raleway&display=swap');

$color-fifth = #99b898
$color-fourth = #fecea8
$color-primary = #1b2127
$color-secondary = #e84a5f
$color-third = #ff847c

*, *:after, *:before
    box-sizing: border-box
    font-family: 'Raleway', sans-serif

html
    font-size: 62.5%

body
    font-size: 1.6rem

a
    text-decoration: none

li
    list-style: none

//---------------LAYOUT-----------------------
.header
    background-color: $color-primary
    height : 60px

    .nav 
        display: flex
        height 60px
        justify-content: space-between

        &__logo
            height 60px

        ul
            display: flex
            height inherit
            margin: 0 
            padding-left: 0

            li
                align-self: center
                margin: 0 1.5rem
                position relative
                text-align: center
                width  80px
            
                a
                    color white


.main
    background-color $color-primary
    height 700px
    display: flex

    .main__title
        font-size: 4.5rem
        width 60%
        align-self: center
        text-align: right
        margin 0
        padding 3rem
        color: $color-fifth
    
    figure
        margin 0
        width 40%

        img 
            width 100%
            height 100%
            object-fit: cover
            

.portfolio
    padding 30px

    .title
        font-size: 3rem
        margin-top 0
        color $color-primary

    &__article
        margin-top 20px
        margin-right: auto
        margin-left: auto
        border 1px solid $color-primary
        border-radius: 25px 
        display: flex

        figure
            width: 40%
            margin 0

            img 
                border-top-right-radius: 23px
                border-bottom-right-radius: 23px
                width: 100%
                height 100%
                object-fit: cover

    &__details
        padding 2rem
        width 60% 

    &__subtitle
        margin 0
        font-size 2.5rem
        color $color-primary
    
    &__tag
        font-size: 1rem
        color white
        padding 0.5rem
        border-radius: 3px
        cursor pointer
    
    .color1
        background: $color-fourth
    .color2
        background: $color-fifth

    &__text
        text-align: justify



.about-me
    padding 30px

    div
        display: flex
        justify-content: space-evenly
        flex-wrap: wrap

    &__article
        height 500px
        margin 10px
        position relative
        width: 400px

        img 
            width: 100%
            height 50%
            object-fit: cover


    &__box-description
        background: white
        display: flex
        align-items: center
        flex-direction: column
        left 50%
        margin-left: -150px
        padding 2rem
        position absolute
        right auto
        top 150px
        width 300px

    &__subtitle
        font-size: 2rem
        font-weight: bold
        margin 0
        text-align: center

    &__text
        text-align: justify
    
    &__button
        background: white
        border-radius: 20px
        border: 1px solid $color-secondary
        color $color-secondary
        outline: none
        padding 5px
        width: 200px
        cursor pointer

footer 
    display: flex
    background-color: $color-primary
    justify-content: space-evenly 

    p
        color white


//----------------MODULES----------------------

//---------------THEME------------------------

//----------------STATE--------------------
.is-selected:before
    border: 1px solid $color-fifth
    content: ""
    height 40px
    left 50%
    margin-left -50px
    margin-top -20px
    position absolute
    top 50%
    width 100px
